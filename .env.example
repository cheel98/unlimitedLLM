# Unlimited Agent 环境配置文件
# 复制此文件为 .env 并根据需要修改配置

# Hugging Face 访问令牌（可选）
# 某些模型可能需要登录Hugging Face账户
# 获取地址: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# CUDA 设备配置（如果有GPU）
# 指定要使用的GPU设备，多个设备用逗号分隔
# 例如: CUDA_VISIBLE_DEVICES=0,1
CUDA_VISIBLE_DEVICES=0

# 调试模式
# 设置为 true 启用详细日志输出
DEBUG=false

# 模型缓存目录
# 指定模型文件的存储位置
MODELS_DIR=./models

# 日志级别
# 可选值: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 网络代理设置（如果需要）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# 模型下载超时时间（秒）
DOWNLOAD_TIMEOUT=3600

# 最大并发下载数
MAX_CONCURRENT_DOWNLOADS=2

# 自动清理缓存
# 设置为 true 在启动时自动清理临时文件
AUTO_CLEANUP=true

# 默认对话模式
# 可选值: default, creative, technical, casual
DEFAULT_MODE=default

# 默认模型配置
# 指定默认使用的模型信息
DEFAULT_MODEL_REPO=DavidAU/OpenAi-GPT-oss-20b-abliterated-uncensored-NEO-Imatrix-gguf
DEFAULT_MODEL_FILENAME=OpenAI-20B-NEO-CODE-DI-Uncensored-Q5_1.gguf
DEFAULT_MODEL_NAME=OpenAI GPT 20B
USE_PRETRAINED=true

# 模型参数配置
MODEL_N_CTX=4096
MODEL_N_THREADS=8
MODEL_N_GPU_LAYERS=0
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_TOP_K=40
MODEL_REPEAT_PENALTY=1.1
MODEL_MAX_TOKENS=2048

# 界面主题
# 可选值: dark, light
THEME=dark

# Web服务器配置
# Web界面端口
WEB_PORT=5000
# Web界面主机地址
WEB_HOST=127.0.0.1
# 是否启用调试模式
WEB_DEBUG=false
# 会话密钥（用于安全）
SECRET_KEY=your-secret-key-here
# 最大对话历史长度
MAX_HISTORY_LENGTH=50

# 对话历史保存
# 设置为 true 自动保存对话历史
SAVE_HISTORY=true

# 历史文件路径
HISTORY_FILE=./chat_history.json

# 最大历史记录数
MAX_HISTORY_LENGTH=100